# **********************************************************
# Makefile for slatreport Directory
# **********************************************************
MAKE=make
PREFIX=../..
bindir=$(PREFIX)/bin

all: slatreport.pl

slatreport.pl: 
	chmod +x slatreport.pl

check: all
	@echo "Testing slatreport.pl"
	./slatTest.pl
	@echo "   slatreport.pl tests successfully completed"

install: all
	cp slatreport.pl $(bindir)

clean:

distclean: clean
	rm -r *~ makefile
