# **********************************************************
# Makefile for rfilter1 Directory
# **********************************************************

srcdir = @srcdir@
VPATH = @srcdir@

CC = @CC@
INSTALL = @INSTALL@

GNUDIFF = @DIFF@
CPPFLAGS = @CPPFLAGS@
DEFS = @DEFS@
CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
SLM_TARGETS = @SLM_TARGETS@
LIBS = @LIBS@ $(SLM_TARGETS)

# Some System V machines do not come with libPW.
# If this is true for you, use the GNU alloca.o here.

prefix = @prefix@
exec_prefix = @exec_prefix@
edit_program_name = sed '@program_transform_name@'

bindir = $(exec_prefix)/bin
mandir =$(prefix)/man
man1dir =$(mandir)/man1
man5dir = $(mandir)/man5

infodir = $(prefix)/info

DEFAULT_EDITOR_PROGRAM = ed
NULL_DEVICE = /dev/null
PR_PROGRAM = /bin/pr

#### End of system configuration section. ####

SHELL = /bin/sh

all: rfilter1

rfilter1: rfilter1.c
	$(CC) -o rfilter1 rfilter1.c

setTests:
	./rfilter1 ../test_suite/test.arb2004.glm < ../test_suite/test.arb2004.txt > ../test_suite/test.arb2004.txt.rfilter1

check:
	@echo "Testing rfilter1"
	./rfilter1 ../test_suite/test.arb2004.glm < ../test_suite/test.arb2004.txt | diff - ../test_suite/test.arb2004.txt.rfilter1
	@echo "   rfilter1 tests successfully completed"

install: all
	$(INSTALL) rfilter1 $(bindir)

clean:
	rm -f rfilter1

distclean: clean
	rm -r *~ makefile
